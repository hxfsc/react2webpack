{
    "parser": "babel-eslint",
    "env": {
        "browser": true,
        "node": true
    },

    "extends": [
      "airbnb",
      "plugin:react/recommended"
    ],

    "rules": {
        "quotes": 0,
        "semi": 2,
        "no-tabs": 2,
        "react/prefer-stateless-function": 0,
        "react/jsx-closing-tag-location": 0,
        "react/jsx-filename-extension": 0,
        "react/jsx-indent": 0,
        "import/no-extraneous-dependencies": 0,
        "arrow-parens": 2,
        "global-require": 0
    }

}

